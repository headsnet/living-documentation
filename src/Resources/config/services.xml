<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="headsnet_livedoc.subscriber.email_messages" class="Headsnet\LivingDocumentation\EventSubscriber\PublishEmailMessages">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.event_actions" class="Headsnet\LivingDocumentation\EventSubscriber\PublishEventActions">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.glossary" class="Headsnet\LivingDocumentation\EventSubscriber\PublishGlossary">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.subscriber.use_cases" class="Headsnet\LivingDocumentation\EventSubscriber\PublishUseCases">
            <argument type="service" id="twig"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="headsnet_livedoc.annotation_loader" class="Headsnet\LivingDocumentation\Services\AnnotationLoader">
            <argument type="service" id="event_dispatcher"/>
            <argument type="string" id="%kernel.project_dir%"/>
        </service>

        <service id="headsnet_livedoc.command.publish" class="Headsnet\LivingDocumentation\Console\PublishCommand">
            <argument type="service" id="headsnet_livedoc.annotation_loader"/>
            <tag name="console.command"/>
        </service>

    </services>

</container>
